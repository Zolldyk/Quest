{
  "name": "quest-dapp",
  "version": "1.0.0",
  "description": "DeFi-Powered NFT Quest Game on Etherlink",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "foundry:install": "forge install",
    "foundry:build": "forge build",
    "foundry:test": "forge test -vvv",
    "foundry:test-gas": "forge test --gas-report",
    "foundry:coverage": "forge coverage",
    "foundry:deploy:anvil": "forge script script/Deploy.s.sol:Deploy --rpc-url anvil --broadcast --account arbWallet",
    "foundry:deploy:testnet": "forge script script/Deploy.s.sol:Deploy --rpc-url etherlink_testnet --broadcast --account arbWallet --verify",
    "foundry:deploy:mainnet": "forge script script/Deploy.s.sol:Deploy --rpc-url etherlink --broadcast --account arbWallet --verify",
    "foundry:verify": "forge verify-contract",
    "codegen": "graph codegen",
    "@openzeppelin/contracts": "^5.4.0",
    "goldsky:deploy": "goldsky subgraph deploy",
    "goldsky:dev": "goldsky subgraph dev"
  },
  "dependencies": {
    "@headlessui/react": "^2.1.2",
    "@heroicons/react": "^2.0.18",
    "@hookform/resolvers": "^3.9.0",
    "@wagmi/core": "^1.4.13",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "dotenv": "^17.2.1",
    "ethers": "^5.7.2",
    "framer-motion": "^11.3.21",
    "next": "^15.4.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.2",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^4.12.0",
    "swr": "^2.2.5",
    "tailwind-merge": "^2.5.2",
    "thirdweb": "^5.105.21",
    "viem": "^1.21.4",
    "wagmi": "^1.4.13",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8",
    "eslint-config-next": "^15.4.4",
    "postcss": "^8.4.40",
    "tailwindcss": "^3.4.7",
    "typescript": "^5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/quest-dapp.git"
  },
  "keywords": [
    "defi",
    "nft",
    "quest",
    "etherlink",
    "web3",
    "dapp",
    "blockchain",
    "solidity",
    "react",
    "nextjs",
    "thirdweb",
    "sequence",
    "goldsky"
  ],
  "author": "Quest Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "optionalDependencies": {
    "pino-pretty": "^13.0.0"
  }
}
